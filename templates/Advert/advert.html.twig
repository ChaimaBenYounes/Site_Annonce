{%  extends 'base.html.twig' %}
{%  block body %}
{{ parent() }}
    {% if adverts is defined %}
     <div class="col-lg-9">

          <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
              <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
              <div class="carousel-item active">
                <img class="d-block img-fluid" src="https://cdn.pixabay.com/photo/2017/02/10/19/11/paper-2056027_960_720.jpg" alt="First slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="https://cdn.pixabay.com/photo/2017/07/14/11/43/list-2503617_960_720.jpg" alt="Second slide">
              </div>
              <div class="carousel-item">
                <img class="d-block img-fluid" src="https://lorempixel.com/900/350/?80765" alt="Third slide">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>

          <div class="row">
          {% for advert in adverts %}
                {% if advert.published == true %}
            <div class="col-lg-4 col-md-6 mb-4">
              <div class="card h-100">
              {% if advert.image is not null %}
                <a href="{{ path('view', {'id': advert.id }) }}"><img class="card-img-top" src="{{ advert.image.url }}" alt="{{ advert.image.alt }}"></a>
              {% endif %}
                <div class="card-body">
                  <h4 class="card-title">
                    <a href="{{ path('view', {'id': advert.id }) }}">{{ advert.title }}</a>
                  </h4>
                  <h5>{{ advert.date|date('d/m/Y', "Europe/Paris") }}</h5>
                  <p class="card-text">{{ advert.content }}</p>
                </div>
                <div class="card-footer">
                  <small class="text-muted">
                  <a href="{{ path('edit', {'id': advert.id }) }}"> Modifier </a>----
                  <a href="{{ path('delete', {'id': advert.id }) }}"> Supprimer </a>----
                  <a href="{{ path('postuler', {'id': advert.id }) }}"> Postuler </a>
                  </small>
                </div>
              </div>
            </div>

              {% endif %}
			{% endfor %}

          </div>
          <!-- /.row -->

        </div>
    {% endif %}	

{% endblock %}
				